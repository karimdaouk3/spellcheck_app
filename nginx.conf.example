# Nginx configuration example for spellcheck app
# Copy this to /etc/nginx/sites-available/spellcheck-app or /etc/nginx/conf.d/spellcheck-app.conf
# Then create a symlink: sudo ln -s /etc/nginx/sites-available/spellcheck-app /etc/nginx/sites-enabled/
# Test config: sudo nginx -t
# Reload nginx: sudo systemctl reload nginx

# Server block for fsrcoach-dev.kla.com
server {
    listen 80;
    listen [::]:80;
    server_name fsrcoach-dev.kla.com;

    # Optional: Redirect HTTP to HTTPS (if you have SSL certificates)
    # return 301 https://$server_name$request_uri;

    # If not using HTTPS, use this configuration:
    location / {
        # Proxy to Flask app running on localhost:5000
        proxy_pass http://localhost:5000;
        
        # Important headers for Flask app behind proxy
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        
        # Timeouts for long-running requests
        proxy_connect_timeout 120s;
        proxy_send_timeout 120s;
        proxy_read_timeout 120s;
        
        # Buffer settings
        proxy_buffering off;
        proxy_request_buffering off;
    }

    # Health check endpoint (optional, for monitoring)
    location /health {
        proxy_pass http://localhost:5000/health;
        proxy_set_header Host $host;
        access_log off;
    }
}

